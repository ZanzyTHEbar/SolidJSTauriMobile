{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc",
            "closure"
        ]
    },
    "source": {
        "include": [
            "src"
        ],
        "exclude": [
            "src/vite-env.d.ts"
        ],
        "includePattern": ".+\\.js|ts(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "plugins/summarize",
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/typescript"
    ],
    "markdown": {
        "excludeTags": [
            "author"
        ]
    },
    "templates": {
        "better-docs": {
            "name": "Components"
        }
    },
    "opts": {
        "destination": "docs",
        "recurse": true,
        "readme": "README.md"
    }
}